<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/regisrationFragment"
        android:name="com.example.android3_1.ui.Registration.RegisrationFragment"
        android:label="fragment_regisration"
        tools:layout="@layout/fragment_regisration" >
        <action
            android:id="@+id/action_regisrationFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.android3_1.ui.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_redactorFragment"
            app:destination="@id/redactorFragment" />
    </fragment>
    <fragment
        android:id="@+id/redactorFragment"
        android:name="com.example.android3_1.ui.fragment.RedactorFragment"
        android:label="fragment_redactor"
        tools:layout="@layout/fragment_redactor" />
</navigation>